<p id="notice"><%= notice %></p>

<h3 class="text-info">
  Posts 
  <span class="pull-right">
    <%= link_to '<i class="glyphicon glyphicon-download-alt" ></i> Export to Excel'.html_safe, posts_path(format: "xlsx"), class: 'btn btn-success', target: '_blank' %>      
  </span>
</h3>
<hr>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Content</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= image_tag post.image.url(:thumb) %></td>
        <td><%= link_to '<i class="glyphicon glyphicon-eye-open"></i>'.html_safe, post %></td>
        <td><%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe, edit_post_path(post) %></td>
        <td><%= link_to '<i class="glyphicon glyphicon-remove"></i>'.html_safe, post, method: :delete, data: { confirm: 'Are you sure?' } %>
        <td><%= link_to '<i class="glyphicon glyphicon-download"></i>'.html_safe, pdf_path(post), target: '_blank' %></td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<%= link_to 'New Post', new_post_path %> | <%= link_to 'Download as zip', download_path, target: '_blank' %>
